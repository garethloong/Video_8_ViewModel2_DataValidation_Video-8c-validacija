@using System.Collections.Generic
@using MVC.Models


@model MVC.Areas.ModulStudentskaSluzba.Data.StudentUrediVM

@*Kako radimo sa objektom "student" iz modela, akcija "Snimi" ce ocekivat bas taj objekat.*@
<form action="/ModulStudentskaSluzba/Student/Snimi">

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label>Ime</label>
        @Html.TextBoxFor(model => model.Ime, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Ime)
    </div>
    <div class="form-group">
        <label>Prezime</label>
        @Html.TextBoxFor(model => model.Prezime, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Prezime)
    </div>
    <div class="form-group">
        <label>Broj indexa</label>
        @Html.TextBoxFor(model => model.BrojIndexa, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.BrojIndexa)
    </div>
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Username)
    </div>
    <div class="form-group">
        @* <label>Password</label>*@
        @Html.LabelFor(model => model.Password)
        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        <label>Datum rodjenja</label>
        @Html.TextBoxFor(model => model.DatumRodjenja, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.DatumRodjenja)
    </div>
    <div class="form-group">
        <label>Smjer</label>
        @Html.DropDownListFor(model => model.SmjerId, Model.smjeroviStavke, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SmjerId)
    </div>

    <div>
        @Html.ValidationSummary()
    </div>

    <input type="submit" value="Snimi" class="btn btn-default" />

</form>

